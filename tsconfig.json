{
  "compilerOptions": {
    "target": "ES2022", // Ensure the target is ES2022 or higher
    "module": "ESNext", // Use ESNext to support top-level await
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "lib": [
      "ESNext",
      "DOM"
    ],
    "outDir": "./dist",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "*": [
        "types/*"
      ]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "examples/voice/**/*",
    "examples/text/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts"
  ]
}